<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="70dp">

    <View
        android:id="@+id/fragment_add_recipe_separator_view"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/grey_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Back button -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fragment_add_recipe_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:tint="@color/black"
        app:srcCompat="@drawable/icon_keyboard_arrow_left_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_add_recipe_btn_action"
        app:layout_constraintTop_toTopOf="@id/fragment_add_recipe_btn_action"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Action button -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fragment_add_recipe_btn_action"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:text="@string/string_btn_save"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_add_recipe_separator_view" />

    <!-- Next button -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fragment_add_recipe_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:tint="@color/black"
        app:srcCompat="@drawable/icon_keyboard_arrow_right_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_add_recipe_btn_action"
        app:layout_constraintTop_toTopOf="@id/fragment_add_recipe_btn_action"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>