<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/feed_item_card_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
card_view:cardElevation="0dp">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/feed_item_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        card_view:layout_constraintLeft_toLeftOf="parent"
        android:src="@color/cardview_shadow_start_color"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feed_item_mainline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is a title"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:minLines="1"
        android:maxLines = "1"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/feed_item_underline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is an underline"
        android:textColor="@android:color/darker_gray"
        android:textSize="14dp"
        android:minLines="1"
        android:maxLines = "2"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/feed_item_mainline"
        card_view:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        android:layout_marginTop="10dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/feed_item_imageview" />

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>